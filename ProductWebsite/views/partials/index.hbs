{{!-- section --}}
<section class="section my-4">
    <div class="container text-center">
        <div class="title py-5">
            <h1>StarComm Furniture Store</h1>
            <p class="subtitle">Upload Images to <strong>Server</strong></p>
        </div>

        <div class="row justify-content-center">
            <div class="col-4">
                <form action="/uploadMultiple" enctype="multipart/form-data" method="POST">
                    <div class="row">
                        <div class="col-8">
                            <input type="file" class="form-control" name="images" id="formFile" multiple/>
                        </div>
                        <div class="col-2">
                            <input type="submit" class="btn btn-warning" value="Upload Images" />
                        </div>
                    </div>
                </form>
            </div>
        </div>

        {{!-- Display Images --}}
        <section class="container" id="CardContainer">
            <div class="row justify-content-center">
                {{#each images }}
                    {{#each this}}
                        {{#if imageBase64}}
                            {{!--Bootstrap Card--}}
                                <div class="col-md-4">
                                    <div class="card shadow" style="width: 20rem;">
                                        <div class="product-img">
                                            <img src='data:{{contentType}};base64,{{imageBase64}}' class="card-img-top" alt="...">
                                        </div>                                        
                                        <div class="card-body text-center">
                                            <h5 class="card-title font-poppins">Title</h5>
                                            <p class="text-secondary font-size-09">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                            <a href="#" class="btn btn-info font-size-09 text-light">Go somewhere</a>
                                        </div>
                                    </div>
                                </div>
                            {{!--/Bootstrap Card--}}
                        {{/if}}
                    {{/each}}
                {{/each}}
            </div>
        </section>
        {{!-- /Display Images --}}    
</section>
{{!-- /section --}}